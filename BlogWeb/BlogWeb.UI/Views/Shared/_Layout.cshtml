<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BlogWeb</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="~/AdminLTE/styles/bootstrap.min.css">
    <link rel="stylesheet" href="~/AdminLTE/styles/bootstrapValidator.min.css" />
    <!-- Bootstrap Responsive -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE/styles/font-awesome.min.css" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/AdminLTE/styles/ionicons.css" />
    <!-- jvectormap -->
    <link rel="stylesheet" href="~/AdminLTE/styles/jquery-jvectormap-1.2.2.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE/styles/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/AdminLTE/styles/skins/_all-skins.min.css">
    <link rel="stylesheet" href="~/AdminLTE/styles/bootstrap-colorpicker.css" />
    <link rel="stylesheet" href="~/AdminLTE/styles/bootstrap-timepicker.css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="~/AdminLTE/scripts/html5shiv.min.js"></script>
        <script src="~/AdminLTE/scripts/respond.min.js"></script>
    <![endif]-->
    <!-- jQuery 2.1.4 -->
    <script src="~/AdminLTE/scripts/jQuery-2.1.4.min.js"></script>
    <script src="~/AdminLTE/scripts/jquery.signalr-2.0.3.js"></script>
    <script src="~/AdminLTE/signalr/hubs"></script>
    <style type="text/css">

        .infotitle {
            color: rgb(119,119,119);
        }

        .fcontent {
            height: 200px;
        }

        .must2 {
            color: #FF88FF;
        }

        .must3 {
            color: #FF88FF;
            font-size: 8px;
        }

        .table-title {
            background-color: rgb(60,141,188);
        }

        .infolb {
            color: white;
        }
    </style>
    <link href="~/AdminLTE/styles/style.css" rel="stylesheet" />
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a asp-action="Index" asp-controller="Home" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>@ViewBag.SmallTitle</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>BlogWeb</b></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Control Sidebar Toggle Button -->
                        <li>
                            <a href="javascript:$('#Logout').submit()">退出</a>
                        </li>
                    </ul>
                    <form asp-action="Logout" asp-controller="Account" id="Logout"></form>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/images/person.png" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p><i class="fa fa-user text-warning">1</i></p>@*@User.Current.UserName*@
                        <p><i class="fa fa-star text-success">余额</i><i class="text-danger">1</i></p>@*￥@((User.Current.Balance).ToString("0.00"))*@
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header" style="color:white;">红包管理</li>
                    <li class="active treeview">
                        <a href="#">
                            <i class="fa fa-files-o"></i> <span>红包管理</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-action="Index" asp-controller="Home"><i class="fa fa-circle-o"></i>基本信息</a></li>
                            <li><a asp-action="Deliver" asp-controller="Home"><i class="fa fa-circle-o"></i>发放红包</a></li>
                            <li><a asp-action="History" asp-controller="Home"><i class="fa fa-circle-o"></i>发放历史</a></li>
                        </ul>
                    </li>
                    @if (User.IsInRole("Root"))
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-star-o"></i>
                                <span>系统管理</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li><a asp-action="Index" asp-controller="Account"><i class="fa fa-circle-o"></i> 用户列表</a></li>
                                <li><a asp-action="Create" asp-controller="Account"><i class="fa fa-circle-o"></i> 创建用户</a></li>
                            </ul>
                        </li>
                    }
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-star-o"></i>
                            <span>我的账户</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-action="Password" asp-controller="Account"><i class="fa fa-circle-o"></i> 修改密码</a></li>
                            <li><a asp-action="Profile" asp-controller="Account"><i class="fa fa-circle-o"></i> 修改商户信息</a></li>
                            <li><a href="javascript:$('#frmLogout').submit();"><i class="fa fa-circle-o"></i> 注销登录</a></li>
                        </ul>
                    </li>
                </ul>
            </section>
            <form id="frmLogout" asp-action="Logout" asp-controller="Account" method="post"></form>
            <!-- /.sidebar -->
        </aside>
        <div>
            <section>
                <div class="content-wrapper">
                    <section class="content">
                        @RenderBody()
                    </section>
                </div>
            </section>
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b id="current-time"></b>
            </div>
            <strong>
                Copyright &copy; @DateTime.Now.Year
                <a href="http://www.1234.sh" target="_blank">Pomelo Foundation</a>.
            </strong> All rights reserved.
        </footer>

    </div><!-- ./wrapper -->
    <!-- Bootstrap 3.3.5 -->
    <script src="~/AdminLTE/scripts/bootstrap.min.js"></script>
    <script src="~/AdminLTE/scripts/bootstrapValidator.min.js"></script>
    <!-- FastClick -->
    <script src="~/AdminLTE/scripts/fastclick.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE/scripts/app.js"></script>
    <script src="~/AdminLTE/scripts/daterangepicker.js"></script>
    <script src="~/AdminLTE/scripts/bootstrap-colorpicker.js"></script>
    <script src="~/AdminLTE/scripts/bootstrap-timepicker.js"></script>
    <!-- Sparkline -->
    <script src="~/AdminLTE/scripts/jquery.sparkline.min.js"></script>
    <!-- jvectormap -->
    <script src="~/AdminLTE/scripts/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/AdminLTE/scripts/jquery-jvectormap-world-mill-en.js"></script>
    <!-- SlimScroll 1.3.0 -->
    <script src="~/AdminLTE/scripts/jquery.slimscroll.min.js"></script>
    <!-- ChartJS 1.0.1 -->
    <script src="~/AdminLTE/scripts/Chart.min.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/AdminLTE/scripts/pages/dashboard2.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE/scripts/demo.js"></script>
</body>
</html>
